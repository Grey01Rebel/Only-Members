<h1>All Posts</h1>

<% if user_signed_in? %>
  <%= link_to "Create New Post", new_post_path %>
<% end %>

<hr>

<% if @posts.any? %>
  <% @posts.each do |post| %>
    <div class="post">
      <h2><%= post.title %></h2>
      <p><%= post.body %></p>

      <% if user_signed_in? %>
        <p><strong>Author:</strong> <%= post.user.name %></p>
      <% end %>

      <small>Posted on <%= post.created_at.strftime("%B %d, %Y at %l:%M %p") %></small>
    </div>
    <hr>
  <% end %>
<% else %>
  <p>No posts yet. Be the first to create one!</p>
<% end %>